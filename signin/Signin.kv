#: import Window kivy.core.window.Window
<SigninWindow>:
    
    Screen:
        MDBoxLayout:
            orientation : "vertical"

            MDBoxLayout:
                orientation : "vertical"
                
                pos_hint : {"center_x":0.5,"center_y": 0.5}
                MDToolbar:
                    title : "Access Control"
                    right_action_items: [["close-circle", lambda x: Window.close()]]

                Widget :

            MDBoxLayout:  
                orientation: "vertical"
                pos_hint : {"center_x":0.5,"center_y": 0.5}
                size_hint_y : 1.2
                
                
            
            
                MDTextField:
                    id : user_field
                    hint_text : "Username"
                    size_hint_x : None
                    width : 600
                    
                    pos_hint : {"center_x":0.5,"center_y": 0.5}
                    focus: True
                    on_text_validate : pwd_field.focus = True
                    

                MDTextField: 
                    id : pwd_field
                    hint_text : "Password"
                    
                    size_hint_x : None
                    width : 600
                    pos_hint : {"center_x":0.5,"center_y": 0.5}
                    password : True
                    on_text_validate : root.validate_user()

                MDFillRoundFlatButton: 
                    text : "Sign in"
                    on_release : root.validate_user()
                    pos_hint : {"center_x":0.5 ,"center_y":0.7}
                    on_release : root.validate_user()
                
                MDLabel :
                    id: info 
                    text: ""
                    theme_text_color:"Error"
                    markup : True
                    halign : "center"
                
                    Widget:
                    
                Widget:
                
